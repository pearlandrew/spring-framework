{
  if (StringUtils.hasText(name)) {
    return (StringUtils.hasText(encoding) ? new ResourcePropertySource(name,new EncodedResource(resource,encoding)) : new ResourcePropertySource(name,resource));
  }
 else {
    return (StringUtils.hasText(encoding) ? new ResourcePropertySource(new EncodedResource(resource,encoding)) : new ResourcePropertySource(resource));
  }
}
