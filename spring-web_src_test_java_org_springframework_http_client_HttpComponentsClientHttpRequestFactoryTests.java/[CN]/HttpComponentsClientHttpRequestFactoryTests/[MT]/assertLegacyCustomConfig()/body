{
  HttpClient httpClient=new org.apache.http.impl.client.DefaultHttpClient();
  HttpComponentsClientHttpRequestFactory hrf=new HttpComponentsClientHttpRequestFactory(httpClient);
  hrf.setConnectTimeout(1234);
  assertEquals(1234,httpClient.getParams().getIntParameter(org.apache.http.params.CoreConnectionPNames.CONNECTION_TIMEOUT,0));
  hrf.setReadTimeout(4567);
  assertEquals(4567,httpClient.getParams().getIntParameter(org.apache.http.params.CoreConnectionPNames.SO_TIMEOUT,0));
}
