{
  for (  SmartContextLoader loader : candidates) {
    if (logger.isDebugEnabled()) {
      logger.debug(String.format("Delegating to %s to load context from [%s].",loader.getClass().getName(),mergedConfig));
    }
    if (loader.supports(mergedConfig)) {
      return loader.loadContext(mergedConfig);
    }
  }
  throw new IllegalStateException(String.format("None of the candidate SmartContextLoaders %s " + "was able to load an ApplicationContext from [%s].",candidates,mergedConfig));
}
