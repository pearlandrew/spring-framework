{
  if (!(resource instanceof ByteArrayResource || resource instanceof DescriptiveResource || resource instanceof InputStreamResource)) {
    try {
      URI resourceUri=resource.getURI();
      if (ResourceUtils.URL_PROTOCOL_FILE.equals(resourceUri.getScheme())) {
        return Optional.of(ResourceUtils.getFile(resourceUri));
      }
    }
 catch (    IOException ignored) {
    }
  }
  return Optional.empty();
}
