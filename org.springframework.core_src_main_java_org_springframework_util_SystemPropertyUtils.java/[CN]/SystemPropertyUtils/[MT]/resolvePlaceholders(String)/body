{
  return HELPER.replacePlaceholders(text,new PlaceholderResolver(){
    public String resolvePlaceholder(    String placeholderName){
      String propVal=null;
      try {
        propVal=System.getProperty(placeholderName);
        if (propVal == null) {
          propVal=System.getenv(placeholderName);
        }
        if (propVal == null) {
          System.err.println("Could not resolve placeholder '" + placeholderName + "' in ["+ text+ "] as system property: neither system property nor environment variable found");
        }
      }
 catch (      Throwable ex) {
        System.err.println("Could not resolve placeholder '" + placeholderName + "' in ["+ text+ "] as system property: "+ ex);
      }
      return propVal;
    }
  }
);
}
