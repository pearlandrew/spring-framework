{
  ((JibxMarshaller)marshaller).setEncoding("ISO-8859-1");
  ((JibxMarshaller)marshaller).setStandalone(Boolean.TRUE);
  StringResult result=new StringResult();
  marshaller.marshal(flights,result);
  assertTrue("Encoding and standalone not set",result.toString().startsWith("<?xml version=\"1.0\" encoding=\"ISO-8859-1\" standalone=\"yes\"?>"));
}
