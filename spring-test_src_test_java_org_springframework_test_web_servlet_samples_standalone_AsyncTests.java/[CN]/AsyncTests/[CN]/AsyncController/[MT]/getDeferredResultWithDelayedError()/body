{
  final DeferredResult<Person> deferredResult=new DeferredResult<Person>();
  new Thread(){
    public void run(){
      try {
        Thread.sleep(100);
        deferredResult.setErrorResult(new RuntimeException("Delayed Error"));
      }
 catch (      InterruptedException e) {
      }
    }
  }
.start();
  return deferredResult;
}
