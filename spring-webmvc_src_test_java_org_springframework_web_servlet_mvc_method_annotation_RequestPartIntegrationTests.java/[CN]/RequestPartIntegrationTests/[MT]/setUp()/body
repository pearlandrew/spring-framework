{
  XmlAwareFormHttpMessageConverter converter=new XmlAwareFormHttpMessageConverter();
  converter.setPartConverters(Arrays.<HttpMessageConverter<?>>asList(new ResourceHttpMessageConverter(),new MappingJacksonHttpMessageConverter()));
  restTemplate=new RestTemplate(new HttpComponentsClientHttpRequestFactory());
  restTemplate.setMessageConverters(Arrays.<HttpMessageConverter<?>>asList(converter));
}
