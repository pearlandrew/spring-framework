{
  return new ServerHttpCookieBuilder(){
    private Duration maxAge=Duration.ofSeconds(-1);
    private String domain;
    private String path;
    private boolean secure;
    private boolean httpOnly;
    @Override public ServerHttpCookieBuilder maxAge(    Duration maxAge){
      this.maxAge=maxAge;
      return this;
    }
    @Override public ServerHttpCookieBuilder domain(    String domain){
      this.domain=domain;
      return this;
    }
    @Override public ServerHttpCookieBuilder path(    String path){
      this.path=path;
      return this;
    }
    @Override public ServerHttpCookieBuilder secure(){
      this.secure=true;
      return this;
    }
    @Override public ServerHttpCookieBuilder httpOnly(){
      this.httpOnly=true;
      return this;
    }
    @Override public ServerHttpCookie build(){
      return new ServerHttpCookie(name,value,this.maxAge,this.domain,this.path,this.secure,this.httpOnly);
    }
  }
;
}
