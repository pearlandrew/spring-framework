{
  HttpUriRequest httpRequest=createHttpUriRequest(httpMethod,uri);
  postProcessHttpRequest(httpRequest);
  if (bufferRequestBody) {
    return new HttpComponentsClientHttpRequest(getHttpClient(),httpRequest,createHttpContext(httpMethod,uri));
  }
 else {
    return new HttpComponentsStreamingClientHttpRequest(getHttpClient(),httpRequest,createHttpContext(httpMethod,uri));
  }
}
