{
  for (  final ApplicationListener<?> listener : getApplicationListeners(event)) {
    Executor executor=getTaskExecutor();
    if (executor != null) {
      executor.execute(new Runnable(){
        @Override public void run(){
          invokeListener(listener,event);
        }
      }
);
    }
 else {
      invokeListener(listener,event);
    }
  }
}
