{
  if (getTransactionManager() == null) {
    throw new IllegalArgumentException("Property 'transactionManager' is required");
  }
  if (getTransactionAttributeSource() == null) {
    throw new IllegalArgumentException("Either 'transactionAttributeSource' or 'transactionAttributes' is required: " + "If there are no transactional methods, then don't use a transaction aspect.");
  }
}
