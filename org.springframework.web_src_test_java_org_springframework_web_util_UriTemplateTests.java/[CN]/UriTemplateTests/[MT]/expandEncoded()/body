{
  UriTemplate template=new UriTemplate("http://example.com/hotel list/{hotel}");
  URI result=template.expand(Collections.singletonMap("hotel","foo bar \u20AC"));
  assertEquals("Invalid expanded template",new URI("http","//example.com/hotel list/foo bar \u20AC",null),result);
  assertEquals("Invalid expanded template","http://example.com/hotel%20list/foo%20bar%20%E2%82%AC",result.toASCIIString());
}
