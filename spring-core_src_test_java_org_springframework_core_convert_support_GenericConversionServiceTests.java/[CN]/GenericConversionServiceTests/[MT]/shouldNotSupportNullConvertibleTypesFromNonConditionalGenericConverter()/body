{
  GenericConversionService conversionService=new GenericConversionService();
  GenericConverter converter=new GenericConverter(){
    @Override public Set<ConvertiblePair> getConvertibleTypes(){
      return null;
    }
    @Override public Object convert(    Object source,    TypeDescriptor sourceType,    TypeDescriptor targetType){
      return null;
    }
  }
;
  try {
    conversionService.addConverter(converter);
    fail("Did not throw");
  }
 catch (  IllegalStateException ex) {
    assertEquals("Only conditional converters may return null convertible types",ex.getMessage());
  }
}
