{
  if (str == null || str.length() == 0) {
    return str;
  }
  StringBuffer buf=new StringBuffer(str.length());
  if (capitalize) {
    buf.append(Character.toUpperCase(str.charAt(0)));
  }
 else {
    buf.append(Character.toLowerCase(str.charAt(0)));
  }
  buf.append(str.substring(1));
  return buf.toString();
}
