{
  StringBuilder result=new StringBuilder();
  for (  char ch : chars) {
    if (isSockJsEscapeCharacter(ch)) {
      result.append('\\').append('u');
      String hex=Integer.toHexString(ch).toLowerCase();
      for (int i=0; i < (4 - hex.length()); i++) {
        result.append('0');
      }
      result.append(hex);
    }
 else {
      result.append(ch);
    }
  }
  return result.toString();
}
