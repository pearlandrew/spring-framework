{
  super(format("A circular @Import has been detected: " + "Illegal attempt by @Configuration class '%s' to import class '%s' as '%s' is " + "already present in the current import stack [%s]",importStack.peek().getSimpleName(),attemptedImport.getSimpleName(),attemptedImport.getSimpleName(),importStack),new Location(new ClassPathResource(convertClassNameToResourcePath(importStack.peek().getName())),importStack.peek().getSource()));
}
