{
  StringBuilder sb=new StringBuilder("Invalid parameter at index ").append(parameter.getParameterIndex()).append(" in method: ").append(parameter.getMethod().toGenericString());
  if (bindingResult != null) {
    sb.append(", with ").append(bindingResult.getErrorCount()).append(" error(s): ");
    for (    ObjectError error : bindingResult.getAllErrors()) {
      sb.append("[").append(error).append("] ");
    }
  }
  return sb.toString();
}
