{
  boolean uriVarMode=false;
  for (int i=pattern.length(); i > 0; i--) {
    char c=pattern.charAt(i - 1);
    if (c == '}') {
      uriVarMode=true;
    }
 else     if (c == '{') {
      uriVarMode=false;
    }
 else     if (c == '/') {
      return false;
    }
 else {
      if (!uriVarMode && c == '.') {
        return true;
      }
    }
  }
  return false;
}
