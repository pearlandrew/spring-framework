{
  StringBuilder output=new StringBuilder();
  if (expressionString != null) {
    output.append("Expression '");
    output.append(expressionString);
    output.append("'");
    if (position != -1) {
      output.append(" @ ");
      output.append(position);
    }
    output.append(": ");
  }
  output.append(getMessage());
  return output.toString();
}
