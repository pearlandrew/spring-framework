{
  if (destination == null) {
    logger.trace("Ignoring message, no destination");
    return false;
  }
  if (!destination.startsWith(requiredPrefix)) {
    if (logger.isTraceEnabled()) {
      logger.trace("Ignoring message to " + destination + ", not a \"user\" destination");
    }
    return false;
  }
  return true;
}
