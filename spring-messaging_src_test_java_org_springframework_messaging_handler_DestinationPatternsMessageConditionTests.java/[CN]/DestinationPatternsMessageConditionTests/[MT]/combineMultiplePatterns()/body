{
  DestinationPatternsMessageCondition c1=condition("/t1","/t2");
  DestinationPatternsMessageCondition c2=suffixCondition(pathSeparator + "m1",pathSeparator + "m2");
  assertEquals(condition("/t1" + pathSeparator + "m1","/t1" + pathSeparator + "m2","/t2" + pathSeparator + "m1","/t2" + pathSeparator + "m2"),c1.combine(c2));
}
