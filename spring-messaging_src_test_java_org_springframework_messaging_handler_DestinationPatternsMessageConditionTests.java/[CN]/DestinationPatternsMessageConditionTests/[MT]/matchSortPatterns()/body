{
  DestinationPatternsMessageCondition condition=suffixCondition(pathSeparator + "**",pathSeparator + "foo" + pathSeparator+ "bar",pathSeparator + "foo" + pathSeparator+ "*");
  DestinationPatternsMessageCondition match=condition.getMatchingCondition(messageTo(pathSeparator + "foo" + pathSeparator+ "bar"));
  DestinationPatternsMessageCondition expected=suffixCondition(pathSeparator + "foo" + pathSeparator+ "bar",pathSeparator + "foo" + pathSeparator+ "*",pathSeparator + "**");
  assertEquals(expected,match);
}
