{
  if (isPubSubDomain()) {
    if (isSubscriptionDurable()) {
      return ((TopicConnection)con).createDurableConnectionConsumer((Topic)destination,getDurableSubscriptionName(),getMessageSelector(),pool,getMaxMessagesPerTask());
    }
 else {
      return ((TopicConnection)con).createConnectionConsumer((Topic)destination,getMessageSelector(),pool,getMaxMessagesPerTask());
    }
  }
 else {
    return ((QueueConnection)con).createConnectionConsumer((Queue)destination,getMessageSelector(),pool,getMaxMessagesPerTask());
  }
}
