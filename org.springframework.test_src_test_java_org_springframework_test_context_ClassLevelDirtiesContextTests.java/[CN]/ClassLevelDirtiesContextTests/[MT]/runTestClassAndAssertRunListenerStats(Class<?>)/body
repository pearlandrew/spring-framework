{
  final int expectedTestFailureCount=0;
  final int expectedTestStartedCount=1;
  final int expectedTestFinishedCount=1;
  TrackingRunListener listener=new TrackingRunListener();
  JUnitCore jUnitCore=new JUnitCore();
  jUnitCore.addListener(listener);
  jUnitCore.run(testClass);
  assertEquals("Verifying number of failures for test class [" + testClass + "].",expectedTestFailureCount,listener.getTestFailureCount());
  assertEquals("Verifying number of tests started for test class [" + testClass + "].",expectedTestStartedCount,listener.getTestStartedCount());
  assertEquals("Verifying number of tests finished for test class [" + testClass + "].",expectedTestFinishedCount,listener.getTestFinishedCount());
}
