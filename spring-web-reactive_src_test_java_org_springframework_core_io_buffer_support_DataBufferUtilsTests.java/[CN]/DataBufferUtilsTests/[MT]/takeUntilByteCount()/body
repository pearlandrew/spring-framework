{
  DataBuffer foo=stringBuffer("foo");
  DataBuffer bar=stringBuffer("bar");
  DataBuffer baz=stringBuffer("baz");
  Flux<DataBuffer> flux=Flux.just(foo,bar,baz);
  Flux<DataBuffer> result=DataBufferUtils.takeUntilByteCount(flux,5L);
  TestSubscriber<DataBuffer> testSubscriber=new TestSubscriber<>();
  testSubscriber.bindTo(result).assertNoError().assertComplete().assertValuesWith(stringConsumer("foo"),stringConsumer("ba"));
  release(bar,baz);
}
