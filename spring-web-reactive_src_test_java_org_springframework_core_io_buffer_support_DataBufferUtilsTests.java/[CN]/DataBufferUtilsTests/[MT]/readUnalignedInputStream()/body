{
  InputStream is=DataBufferUtilsTests.class.getResourceAsStream("DataBufferUtilsTests.txt");
  Flux<DataBuffer> flux=DataBufferUtils.read(is,allocator,3);
  TestSubscriber<DataBuffer> testSubscriber=new TestSubscriber<>();
  testSubscriber.bindTo(flux).assertNoError().assertComplete().assertValues(stringBuffer("foo"),stringBuffer("\nba"),stringBuffer("r\nb"),stringBuffer("az\n"),stringBuffer("qux"),stringBuffer("\n"));
}
