{
  if (getInProgressSendTime() > this.sendTimeLimit) {
    logError("A message could not be sent due to a timeout");
    getDelegate().close();
  }
 else   if (this.bufferSize.get() > this.bufferSizeLimit) {
    logError("The total send buffer byte count '" + this.bufferSize.get() + "' for session '"+ getId()+ "' exceeds the allowed limit '"+ this.bufferSizeLimit+ "'");
    getDelegate().close();
  }
}
