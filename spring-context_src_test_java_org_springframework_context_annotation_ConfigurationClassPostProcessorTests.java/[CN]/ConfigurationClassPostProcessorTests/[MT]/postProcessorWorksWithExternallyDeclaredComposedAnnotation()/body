{
  beanFactory.registerBeanDefinition("config",new RootBeanDefinition(org.springframework.context.annotation.componentscan.meta.ComposedAnnotationConfig.class));
  ConfigurationClassPostProcessor pp=new ConfigurationClassPostProcessor();
  pp.setEnvironment(new StandardEnvironment());
  pp.postProcessBeanFactory(beanFactory);
  SimpleComponent simpleComponent=beanFactory.getBean(SimpleComponent.class);
  assertNotNull(simpleComponent);
}
