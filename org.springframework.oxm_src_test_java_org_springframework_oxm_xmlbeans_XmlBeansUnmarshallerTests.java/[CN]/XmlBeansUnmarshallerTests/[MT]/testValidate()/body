{
  ((XmlBeansMarshaller)unmarshaller).setValidating(true);
  String invalidInput="<tns:flights xmlns:tns=\"http://samples.springframework.org/flight\">" + "<tns:flight><tns:number>abc</tns:number></tns:flight></tns:flights>";
  unmarshaller.unmarshal(new StreamSource(new StringReader(invalidInput)));
}
