{
  Assume.group(TestGroup.PERFORMANCE);
  Class<TimedSpringRunnerTestCase> testClass=TimedSpringRunnerTestCase.class;
  TrackingRunListener listener=new TrackingRunListener();
  RunNotifier notifier=new RunNotifier();
  notifier.addListener(listener);
  new SpringJUnit4ClassRunner(testClass).run(notifier);
  assertEquals("Verifying number of tests started for test class [" + testClass + "].",7,listener.getTestStartedCount());
  assertEquals("Verifying number of tests ignored for test class [" + testClass + "].",0,listener.getTestIgnoredCount());
  assertEquals("Verifying number of assumption failures for test class [" + testClass + "].",0,listener.getTestAssumptionFailureCount());
  assertEquals("Verifying number of test failures for test class [" + testClass + "].",5,listener.getTestFailureCount());
  assertEquals("Verifying number of tests finished for test class [" + testClass + "].",7,listener.getTestFinishedCount());
}
