{
  Assume.group(TestGroup.PERFORMANCE);
  Class<TimedSpringRunnerTestCase> testClass=TimedSpringRunnerTestCase.class;
  TrackingRunListener listener=new TrackingRunListener();
  RunNotifier notifier=new RunNotifier();
  notifier.addListener(listener);
  new SpringJUnit4ClassRunner(testClass).run(notifier);
  assertEquals("Verifying number of tests started for test class [" + testClass + "].",6,listener.getTestStartedCount());
  assertEquals("Verifying number of failures for test class [" + testClass + "].",4,listener.getTestFailureCount());
  assertEquals("Verifying number of tests finished for test class [" + testClass + "].",6,listener.getTestFinishedCount());
}
