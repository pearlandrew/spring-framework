{
  MockHttpServletRequest request=new MockHttpServletRequest("GET","/foo");
  request.addHeader("Accept","text/plain");
  RequestMappingInfo key=new RequestMappingInfo(new PatternsRequestCondition("/foo"),null,null,null,null,new ProducesRequestCondition("text/plain"));
  RequestMappingInfo match=key.getMatchingRequestMapping(request);
  assertNotNull(match);
  key=new RequestMappingInfo(new PatternsRequestCondition("/foo"),null,null,null,null,new ProducesRequestCondition("application/xml"));
  match=key.getMatchingRequestMapping(request);
  assertNull(match);
}
