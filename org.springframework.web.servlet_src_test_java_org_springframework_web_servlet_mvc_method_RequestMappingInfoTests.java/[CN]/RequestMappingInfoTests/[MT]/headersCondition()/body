{
  MockHttpServletRequest request=new MockHttpServletRequest("GET","/foo");
  request.addHeader("foo","bar");
  RequestMappingInfo key=new RequestMappingInfo(new PatternsRequestCondition("/foo"),null,null,new HeadersRequestCondition("foo=bar"),null,null);
  RequestMappingInfo match=key.getMatchingRequestMappingInfo(request);
  assertNotNull(match);
  key=new RequestMappingInfo(new PatternsRequestCondition("/foo"),null,null,new HeadersRequestCondition("foo!=bar"),null,null);
  match=key.getMatchingRequestMappingInfo(request);
  assertNull(match);
}
