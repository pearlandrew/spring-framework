{
  Assert.notNull(portletContext,"PortletContext must not be null");
  if (!path.startsWith("/")) {
    path="/" + path;
  }
  String realPath=portletContext.getRealPath(path);
  if (realPath == null) {
    throw new FileNotFoundException("PortletContext resource [" + path + "] cannot be resolved to absolute file path - "+ "web application archive not expanded?");
  }
  return realPath;
}
