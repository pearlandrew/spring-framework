{
  org.hibernate.cfg.Configuration cfg=getConfiguration();
  try {
    Method m=cfg.getClass().getMethod(methodName,parameterType);
    m.invoke(cfg,parameter);
  }
 catch (  Exception ex) {
    throw new IllegalStateException(String.format("Hibernate Configuration class [%s] does not support the '%s(%s)' method.",cfg.getClass().getSimpleName(),methodName,parameterType.getSimpleName()));
  }
}
