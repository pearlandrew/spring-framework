{
  Class<?> handlerType=(handler instanceof String) ? this.applicationContext.getType((String)handler) : handler.getClass();
  final Class<?> userType=ClassUtils.getUserClass(handlerType);
  initHandlerMethods(handler,userType,MessageMapping.class,new MessageMappingInfoCreator(),this.messageMethods);
  initHandlerMethods(handler,userType,SubscribeEvent.class,new SubscribeMappingInfoCreator(),this.subscribeMethods);
  initHandlerMethods(handler,userType,UnsubscribeEvent.class,new UnsubscribeMappingInfoCreator(),this.unsubscribeMethods);
}
