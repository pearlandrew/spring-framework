{
  if (query != null) {
    Matcher m=QUERY_PARAM_PATTERN.matcher(query);
    while (m.find()) {
      String name=m.group(1);
      String eq=m.group(2);
      String value=m.group(3);
      queryParam(name,(value != null ? value : (StringUtils.hasLength(eq) ? "" : null)));
    }
  }
 else {
    this.queryParams.clear();
  }
  resetSchemeSpecificPart();
  return this;
}
