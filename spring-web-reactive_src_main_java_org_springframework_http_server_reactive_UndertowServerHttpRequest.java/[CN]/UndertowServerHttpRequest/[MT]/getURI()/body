{
  if (this.uri == null) {
    try {
      return new URI(this.getUndertowExchange().getRequestScheme(),null,this.getUndertowExchange().getHostName(),this.getUndertowExchange().getHostPort(),this.getUndertowExchange().getRequestURI(),this.getUndertowExchange().getQueryString(),null);
    }
 catch (    URISyntaxException ex) {
      throw new IllegalStateException("Could not get URI: " + ex.getMessage(),ex);
    }
  }
  return this.uri;
}
