{
  if (logger.isInfoEnabled()) {
    logger.info("Creating JAXBContext with context path [" + getContextPath() + "]");
  }
  if (jaxbContextProperties != null) {
    if (classLoader != null) {
      return JAXBContext.newInstance(getContextPath(),classLoader,jaxbContextProperties);
    }
 else {
      return JAXBContext.newInstance(getContextPath(),ClassUtils.getDefaultClassLoader(),jaxbContextProperties);
    }
  }
 else {
    return classLoader != null ? JAXBContext.newInstance(getContextPath(),classLoader) : JAXBContext.newInstance(getContextPath());
  }
}
