{
  Assert.notNull(model,"The model to bind to is required");
  this.model=model;
  bindingFactories=new LinkedHashSet<BindingFactory>();
  int parserConfig=SpelExpressionParserConfiguration.CreateListsOnAttemptToIndexIntoNull | SpelExpressionParserConfiguration.GrowListsOnIndexBeyondSize;
  expressionParser=new SpelExpressionParser(parserConfig);
  typeConverter=new DefaultTypeConverter();
}
