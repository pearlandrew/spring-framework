{
  TrackingRunListener listener=new TrackingRunListener();
  RunNotifier notifier=new RunNotifier();
  notifier.addListener(listener);
  invocationCount.set(0);
  new SpringJUnit4ClassRunner(this.testClass).run(notifier);
  assertEquals("Verifying number of failures for test class [" + this.testClass + "].",this.expectedFailureCount,listener.getTestFailureCount());
  assertEquals("Verifying number of tests started for test class [" + this.testClass + "].",this.expectedTestStartedCount,listener.getTestStartedCount());
  assertEquals("Verifying number of tests finished for test class [" + this.testClass + "].",this.expectedTestFinishedCount,listener.getTestFinishedCount());
  assertEquals("Verifying number of invocations for test class [" + this.testClass + "].",this.expectedInvocationCount,invocationCount.get());
}
