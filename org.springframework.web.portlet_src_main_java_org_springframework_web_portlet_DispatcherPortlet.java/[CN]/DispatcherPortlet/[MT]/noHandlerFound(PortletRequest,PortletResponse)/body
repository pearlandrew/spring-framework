{
  if (pageNotFoundLogger.isWarnEnabled()) {
    pageNotFoundLogger.warn("No mapping found for current request " + "in DispatcherPortlet with name '" + getPortletName() + "', mode '"+ request.getPortletMode()+ "', phase '"+ request.getAttribute(PortletRequest.LIFECYCLE_PHASE)+ "', session '"+ request.getRequestedSessionId()+ "', user '"+ getUsernameForRequest(request)+ "'");
  }
  throw new UnavailableException("No handler found for request");
}
