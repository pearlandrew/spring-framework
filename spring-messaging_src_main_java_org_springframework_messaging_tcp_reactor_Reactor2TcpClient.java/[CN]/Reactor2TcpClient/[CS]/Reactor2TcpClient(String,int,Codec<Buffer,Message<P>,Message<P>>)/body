{
  final NioEventLoopGroup eventLoopGroup=initEventLoopGroup();
  this.tcpClientSpecFactory=new TcpClientSpecFactory<Message<P>,Message<P>>(){
    @Override public TcpClientSpec<Message<P>,Message<P>> apply(    TcpClientSpec<Message<P>,Message<P>> spec){
      return spec.env(new Environment(new SynchronousDispatcherConfigReader())).codec(codec).connect(host,port).options(new NettyClientSocketOptions().eventLoopGroup(eventLoopGroup));
    }
  }
;
}
