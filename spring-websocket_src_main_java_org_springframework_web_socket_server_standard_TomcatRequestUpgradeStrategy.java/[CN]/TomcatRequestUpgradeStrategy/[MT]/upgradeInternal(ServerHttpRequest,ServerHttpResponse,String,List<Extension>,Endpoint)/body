{
  HttpServletRequest servletRequest=getHttpServletRequest(request);
  HttpServletResponse servletResponse=getHttpServletResponse(response);
  StringBuffer requestUrl=servletRequest.getRequestURL();
  String path=servletRequest.getRequestURI();
  Map<String,String> pathParams=Collections.<String,String>emptyMap();
  ServerEndpointRegistration endpointConfig=new ServerEndpointRegistration(path,endpoint);
  endpointConfig.setSubprotocols(Arrays.asList(selectedProtocol));
  endpointConfig.setExtensions(selectedExtensions);
  try {
    getContainer(servletRequest).doUpgrade(servletRequest,servletResponse,endpointConfig,pathParams);
  }
 catch (  ServletException ex) {
    throw new HandshakeFailureException("Servlet request failed to upgrade to WebSocket, uri=" + requestUrl,ex);
  }
catch (  IOException ex) {
    throw new HandshakeFailureException("Response update failed during upgrade to WebSocket, uri=" + requestUrl,ex);
  }
}
