{
  Assert.hasText(attributeName,"attributeName must not be null or empty");
  Object value=this.get(attributeName);
  Assert.notNull(value,format("Attribute '%s' not found",attributeName));
  Assert.isAssignable(expectedType,value.getClass(),format("Attribute '%s' is of type [%s], but [%s] was expected. Cause: ",attributeName,value.getClass().getSimpleName(),expectedType.getSimpleName()));
  return (T)value;
}
