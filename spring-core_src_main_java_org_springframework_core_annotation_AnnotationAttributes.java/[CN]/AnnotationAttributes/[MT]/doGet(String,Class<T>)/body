{
  Assert.hasText(attributeName,"attributeName must not be null or empty");
  Object value=get(attributeName);
  if (value == null) {
    throw new IllegalArgumentException(String.format("Attribute '%s' not found in attributes for annotation [%s]",attributeName,(annotationType() != null ? annotationType.getName() : "unknown")));
  }
  if (!expectedType.isInstance(value)) {
    if (expectedType.isArray() && expectedType.getComponentType().isInstance(value)) {
      Object arrayValue=Array.newInstance(expectedType.getComponentType(),1);
      Array.set(arrayValue,0,value);
      value=arrayValue;
    }
 else {
      throw new IllegalArgumentException(String.format("Attribute '%s' is of type [%s], but [%s] was expected in attributes for annotation [%s]",attributeName,value.getClass().getSimpleName(),expectedType.getSimpleName(),(annotationType() != null ? annotationType.getName() : "unknown")));
    }
  }
  return (T)value;
}
