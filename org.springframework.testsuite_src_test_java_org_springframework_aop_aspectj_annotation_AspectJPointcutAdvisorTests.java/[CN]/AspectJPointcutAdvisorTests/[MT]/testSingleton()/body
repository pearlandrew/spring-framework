{
  AspectJExpressionPointcut ajexp=new AspectJExpressionPointcut();
  ajexp.setExpression(AspectJExpressionPointcutTests.MATCH_ALL_METHODS);
  InstantiationModelAwarePointcutAdvisorImpl ajpa=new InstantiationModelAwarePointcutAdvisorImpl(af,ajexp,new SingletonMetadataAwareAspectInstanceFactory(new AbstractAspectJAdvisorFactoryTests.ExceptionAspect(null),"someBean"),TestBean.class.getMethod("getAge",(Class[])null),1,"someBean");
  assertSame(Pointcut.TRUE,ajpa.getAspectMetadata().getPerClausePointcut());
  assertFalse(ajpa.isPerInstance());
}
