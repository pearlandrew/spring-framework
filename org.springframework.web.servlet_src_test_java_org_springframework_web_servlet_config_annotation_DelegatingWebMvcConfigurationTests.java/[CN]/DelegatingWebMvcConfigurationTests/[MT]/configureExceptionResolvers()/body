{
  List<WebMvcConfigurer> configurers=new ArrayList<WebMvcConfigurer>();
  configurers.add(new WebMvcConfigurerAdapter(){
    @Override public void configureHandlerExceptionResolvers(    List<HandlerExceptionResolver> exceptionResolvers){
      exceptionResolvers.add(new DefaultHandlerExceptionResolver());
    }
  }
);
  mvcConfiguration.setConfigurers(configurers);
  HandlerExceptionResolverComposite composite=(HandlerExceptionResolverComposite)mvcConfiguration.handlerExceptionResolver();
  assertEquals("Only one custom converter is expected",1,composite.getExceptionResolvers().size());
}
