{
  try {
    MockHttpServletRequest request=new MockHttpServletRequest("PUT",url);
    request.setContentType("application/json");
    mapping.getHandler(request);
    fail("HttpMediaTypeNotSupportedException expected");
  }
 catch (  HttpMediaTypeNotSupportedException ex) {
    assertEquals("Invalid supported consumable media types",Arrays.asList(new MediaType("application","xml")),ex.getSupportedMediaTypes());
  }
}
