{
  Assert.notNull(destinationName,"destinationName is required");
  message=addDestinationToMessage(message,destinationName);
  long timeout=this.sendTimeout;
  boolean sent=(timeout >= 0) ? this.outputChannel.send(message,timeout) : this.outputChannel.send(message);
  if (!sent) {
    throw new MessageDeliveryException(message,"failed to send message to destination '" + destinationName + "' within timeout: "+ timeout);
  }
}
