{
  AnnotationConfigApplicationContext ctx=new AnnotationConfigApplicationContext();
  ctx.scan("org.springframework.context.annotation.role");
  ctx.refresh();
  assertThat("Expected bean to have ROLE_APPLICATION",ctx.getBeanDefinition("componentWithoutRole").getRole(),is(BeanDefinition.ROLE_APPLICATION));
  assertThat("Expected bean to have ROLE_INFRASTRUCTURE",ctx.getBeanDefinition("componentWithRole").getRole(),is(BeanDefinition.ROLE_INFRASTRUCTURE));
}
