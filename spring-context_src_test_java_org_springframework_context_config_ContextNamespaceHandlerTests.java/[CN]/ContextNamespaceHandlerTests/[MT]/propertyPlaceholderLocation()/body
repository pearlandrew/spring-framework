{
  ApplicationContext applicationContext=new ClassPathXmlApplicationContext("contextNamespaceHandlerTests-location.xml",getClass());
  Map<String,PropertyPlaceholderConfigurer> beans=applicationContext.getBeansOfType(PropertyPlaceholderConfigurer.class);
  assertFalse("No PropertyPlaceholderConfigurer found",beans.isEmpty());
  String s=(String)applicationContext.getBean("foo");
  assertEquals("bar",s);
  s=(String)applicationContext.getBean("bar");
  assertEquals("foo",s);
  s=(String)applicationContext.getBean("spam");
  assertEquals("maps",s);
}
