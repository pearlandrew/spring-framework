{
  Map<String,String> uriVariables=new HashMap<String,String>(2);
  uriVariables.put("hotel","1");
  uriVariables.put("publicpath","pics/logo.png");
  uriVariables.put("scale","150x150");
  UriTemplate template=new UriTemplate("http://example.com/hotels/{hotel}/pic/{/publicpath}/size/{scale}");
  URI result=template.expand(uriVariables);
  assertEquals("Invalid expanded template",new URI("http://example.com/hotels/1/pic/pics%2Flogo.png/size/150x150"),result);
}
