{
  Map<String,String> uriVariables=new HashMap<String,String>(2);
  uriVariables.put("var1","foo/bar");
  uriVariables.put("var2","baz");
  UriTemplate template=new UriTemplate("http://example.com/part1/before-{/var1}-after/{var2}");
  URI result=template.expand(uriVariables);
  assertEquals("Invalid expanded template",new URI("http://example.com/part1/before-foo%2Fbar-after/baz"),result);
}
