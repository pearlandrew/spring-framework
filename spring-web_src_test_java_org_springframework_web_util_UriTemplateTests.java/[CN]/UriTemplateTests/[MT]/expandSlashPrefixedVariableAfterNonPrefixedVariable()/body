{
  Map<String,String> uriVariables=new HashMap<String,String>(2);
  uriVariables.put("var1","foo/bar");
  uriVariables.put("var2","baz");
  uriVariables.put("var3","qux");
  UriTemplate template=new UriTemplate("http://example.com/part1/before-{/var1}-{var2}-after/{var3}");
  URI result=template.expand(uriVariables);
  assertEquals("Invalid expanded template",new URI("http://example.com/part1/before-foo%2Fbar-baz-after/qux"),result);
}
