{
  GenericConverter.ConvertiblePair typeInfo=getRequiredTypeInfo(converterFactory,ConverterFactory.class);
  if (typeInfo == null) {
    throw new IllegalArgumentException("Unable to the determine sourceType <S> and targetRangeType R which " + "your ConverterFactory<S, R> converts between; declare these generic types.");
  }
  addConverter(new ConverterFactoryAdapter(typeInfo,converterFactory));
}
