{
  String name=parameter.getParameterName() != null ? parameter.getParameterName() : "arg" + parameter.getParameterIndex();
  StringBuilder sb=new StringBuilder("Payload parameter '").append(name).append(" at index ").append(parameter.getParameterIndex()).append(" ");
  if (payload == null) {
    sb.append("could not be converted to '").append(parameter.getParameterType().getName()).append("' and is required");
  }
 else {
    sb.append("is required");
  }
  return sb.toString();
}
