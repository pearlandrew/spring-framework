{
  if (type.isArray()) {
    appendType(sb,type.getComponentType(),useLongTypeName);
    sb.append("[]");
  }
 else {
    if (type.getPackage() != null && type.getPackage().equals("java.lang")) {
      useLongTypeName=false;
    }
    sb.append(useLongTypeName ? type.getName() : type.getSimpleName());
  }
}
