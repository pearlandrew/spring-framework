{
  StringBuilder sb=new StringBuilder();
  boolean inLiteral=false;
  char[] content=script.toCharArray();
  for (int i=0; i < script.length(); i++) {
    if (content[i] == '\'') {
      inLiteral=!inLiteral;
    }
    if (content[i] == delim && !inLiteral) {
      if (sb.length() > 0) {
        statements.add(sb.toString());
        sb=new StringBuilder();
      }
    }
 else {
      sb.append(content[i]);
    }
  }
  if (sb.length() > 0) {
    statements.add(sb.toString());
  }
}
