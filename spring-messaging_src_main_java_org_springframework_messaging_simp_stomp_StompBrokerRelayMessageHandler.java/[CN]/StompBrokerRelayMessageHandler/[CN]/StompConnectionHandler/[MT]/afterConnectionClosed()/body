{
  if (this.tcpConnection == null) {
    return;
  }
  try {
    if (logger.isDebugEnabled()) {
      logger.debug("TCP connection to broker closed in session '" + this.sessionId + "'");
    }
    sendStompErrorToClient("Connection to broker closed");
  }
  finally {
    try {
      clearConnection();
    }
 catch (    Throwable t) {
      if (logger.isErrorEnabled()) {
      }
    }
  }
}
