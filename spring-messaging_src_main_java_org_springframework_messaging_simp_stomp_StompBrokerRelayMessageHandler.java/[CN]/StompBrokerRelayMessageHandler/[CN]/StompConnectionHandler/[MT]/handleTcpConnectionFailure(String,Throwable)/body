{
  if (logger.isErrorEnabled()) {
    logger.error(errorMessage + ", sessionId '" + this.sessionId+ "'",ex);
  }
  try {
    sendStompErrorToClient(errorMessage);
  }
  finally {
    try {
      clearConnection();
    }
 catch (    Throwable t) {
      if (logger.isErrorEnabled()) {
        logger.error("Failed to close connection: " + t.getMessage());
      }
    }
  }
}
