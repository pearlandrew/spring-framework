{
  StringBuilder sb=new StringBuilder("Validation failed for argument at index [").append(parameter.getParameterIndex()).append("] in method: ").append(parameter.getMethod().toGenericString()).append(", with ").append(bindingResult.getErrorCount()).append(" error(s): ");
  for (  ObjectError error : bindingResult.getAllErrors()) {
    sb.append("[").append(error).append("] ");
  }
  return sb.toString();
}
