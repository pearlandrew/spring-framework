{
  Assert.notNull(testClass,"Test class must not be null");
  Assert.notNull(contextCache,"ContextCache must not be null");
  this.testClass=testClass;
  this.contextCache=contextCache;
  this.cacheAwareContextLoaderDelegate=new CacheAwareContextLoaderDelegate(contextCache);
  this.mergedContextConfiguration=ContextLoaderUtils.buildMergedContextConfiguration(testClass,defaultContextLoaderClassName,cacheAwareContextLoaderDelegate);
}
