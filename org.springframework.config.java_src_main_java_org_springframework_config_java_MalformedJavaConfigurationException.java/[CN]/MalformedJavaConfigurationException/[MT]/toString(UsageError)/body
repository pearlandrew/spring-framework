{
  StringBuilder sb=new StringBuilder();
  sb.append("\n");
  if (errors.length == 1)   sb.append("A usage error has ");
 else   sb.append(errors.length + " usage errors have ");
  sb.append("been detected:\n");
  for (int i=0; i < errors.length; i++) {
    sb.append(errors[i].toString());
    if ((i + 1) < errors.length)     sb.append('\n');
  }
  return sb.toString();
}
