{
  Flux<DataBuffer> source=Flux.just(stringBuffer("foo"),stringBuffer("bar"),stringBuffer("baz"));
  Mono<String> mono=Mono.from(this.decoder.decode(source,ResolvableType.forClassWithGenerics(Mono.class,String.class),MediaType.TEXT_PLAIN));
  TestSubscriber<String> testSubscriber=new TestSubscriber<>();
  testSubscriber.bindTo(mono).assertValues("foobarbaz");
}
