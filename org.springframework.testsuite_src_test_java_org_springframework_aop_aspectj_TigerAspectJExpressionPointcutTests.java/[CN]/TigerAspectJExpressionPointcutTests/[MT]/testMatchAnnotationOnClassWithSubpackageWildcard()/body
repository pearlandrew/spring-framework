{
  String expression="within(@(org.springframework..*) *)";
  AspectJExpressionPointcut springAnnotatedPc=testMatchAnnotationOnClass(expression);
  assertFalse(springAnnotatedPc.matches(TestBean.class.getMethod("setName",String.class),TestBean.class));
  assertTrue(springAnnotatedPc.matches(SpringAnnotated.class.getMethod("foo",(Class[])null),SpringAnnotated.class));
  expression="within(@(org.springframework.transaction..*) *)";
  AspectJExpressionPointcut springTxAnnotatedPc=testMatchAnnotationOnClass(expression);
  assertFalse(springTxAnnotatedPc.matches(SpringAnnotated.class.getMethod("foo",(Class[])null),SpringAnnotated.class));
}
