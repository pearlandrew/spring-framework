{
  EntityManager em=entityManagerFactory.createEntityManager();
  em.joinTransaction();
  doInstantiateAndSave(em);
  endTransaction();
  assertFalse(em.getTransaction().isActive());
  startNewTransaction();
  assertFalse(em.contains(new Person()));
  assertFalse(em.getTransaction().isActive());
  em.joinTransaction();
  assertTrue(em.getTransaction().isActive());
  doInstantiateAndSave(em);
  setComplete();
  endTransaction();
  assertEquals("Tx must have committed back",1,countRowsInTable("person"));
  startNewTransaction();
  em.joinTransaction();
  deleteAllPeopleUsingEntityManager(em);
  assertEquals("People have been killed",0,countRowsInTable("person"));
  setComplete();
}
