{
  StringBuffer sb=new StringBuffer();
  boolean inLiteral=false;
  char[] content=script.toCharArray();
  for (int i=0; i < script.length(); i++) {
    if (content[i] == '\'') {
      inLiteral=inLiteral ? false : true;
    }
    if (content[i] == delim && !inLiteral) {
      if (sb.length() > 0) {
        statements.add(sb.toString());
        sb=new StringBuffer();
      }
    }
 else {
      sb.append(content[i]);
    }
  }
  if (sb.length() > 0) {
    statements.add(sb.toString());
  }
}
