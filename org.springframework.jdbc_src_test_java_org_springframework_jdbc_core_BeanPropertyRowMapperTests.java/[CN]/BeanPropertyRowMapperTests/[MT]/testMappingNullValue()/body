{
  BeanPropertyRowMapper mapper=new BeanPropertyRowMapper(Person.class);
  try {
    List result1=jdbcTemplate2.query("select name, null as age, birth_date, balance from people",mapper);
    fail("Should have thrown TypeMismatchException because of null value");
  }
 catch (  TypeMismatchException ex) {
  }
  mapper.setPrimitivesDefaultedForNullValue(true);
  List result2=jdbcTemplate2.query("select name, null as age, birth_date, balance from people",mapper);
  assertEquals(1,result2.size());
  Person bean=(Person)result2.get(0);
  verifyPersonWithZeroAge(bean);
}
