{
  if (this.handlerMappings == null) {
    try {
      Properties mappings=PropertiesLoaderUtils.loadAllProperties(this.handlerMappingsLocation,this.classLoader);
      if (logger.isDebugEnabled()) {
        logger.debug("Loaded mappings [" + mappings + "]");
      }
      this.handlerMappings=new HashMap(mappings);
    }
 catch (    IOException ex) {
      IllegalStateException ise=new IllegalStateException("Unable to load NamespaceHandler mappings from location [" + this.handlerMappingsLocation + "]");
      ise.initCause(ex);
      throw ise;
    }
  }
  return this.handlerMappings;
}
