{
  Object o=new Object();
  String name="foo";
  MockControl mc=MockControl.createControl(Context.class);
  final Context mock=(Context)mc.getMock();
  mock.bind(name,o);
  mc.setVoidCallable(1);
  mock.close();
  mc.setVoidCallable(1);
  mc.replay();
  JndiTemplate jt=new JndiTemplate(){
    protected Context createInitialContext(){
      return mock;
    }
  }
;
  jt.bind(name,o);
  mc.verify();
}
