{
  Method[] ms=clazz.getMethods();
  StringBuilder sb=new StringBuilder();
  sb.append("get").append(propertyName.substring(0,1).toUpperCase()).append(propertyName.substring(1));
  String expectedGetterName=sb.toString();
  for (int i=0; i < ms.length; i++) {
    Method method=ms[i];
    if (method.getParameterTypes().length == 0 && (mustBeStatic ? Modifier.isStatic(method.getModifiers()) : true) && method.getName().equals(expectedGetterName)) {
      return method;
    }
  }
  return null;
}
