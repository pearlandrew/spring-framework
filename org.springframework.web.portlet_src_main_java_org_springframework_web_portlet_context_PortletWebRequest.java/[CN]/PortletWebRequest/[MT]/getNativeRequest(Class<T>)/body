{
  if (requiredType != null) {
    PortletRequest request=getRequest();
    while (request != null) {
      if (requiredType.isInstance(request)) {
        return (T)request;
      }
 else       if (request instanceof PortletRequestWrapper) {
        request=((PortletRequestWrapper)request).getRequest();
      }
 else {
        request=null;
      }
    }
  }
  return null;
}
