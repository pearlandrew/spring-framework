{
  Method specificMethod=null;
  if (method != null && !Modifier.isPrivate(method.getModifiers()) && targetClass != null && !targetClass.equals(method.getDeclaringClass())) {
    specificMethod=ReflectionUtils.findMethod(targetClass,method.getName(),method.getParameterTypes());
  }
  return (specificMethod != null ? specificMethod : method);
}
