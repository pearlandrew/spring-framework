{
  Object o=new Object();
  String name="foo";
  final Context context=createMock(Context.class);
  context.bind(name,o);
  context.close();
  replay(context);
  JndiTemplate jt=new JndiTemplate(){
    @Override protected Context createInitialContext(){
      return context;
    }
  }
;
  jt.bind(name,o);
  verify(context);
}
