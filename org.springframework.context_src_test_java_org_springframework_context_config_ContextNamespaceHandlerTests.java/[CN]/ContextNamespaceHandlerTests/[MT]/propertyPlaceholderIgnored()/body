{
  ApplicationContext applicationContext=new ClassPathXmlApplicationContext("contextNamespaceHandlerTests-replace-ignore.xml",getClass());
  Map<String,PropertyPlaceholderConfigurer> beans=applicationContext.getBeansOfType(PropertyPlaceholderConfigurer.class);
  assertFalse("No PropertyPlaceHolderConfigurer found",beans.isEmpty());
  String s=(String)applicationContext.getBean("string");
  assertEquals("Properties replaced","${bar}",s);
}
