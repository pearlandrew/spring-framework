{
  Assert.notNull(name,"'name' must not be null");
  if (ObjectUtils.isEmpty(values)) {
    if (queryBuilder.length() != 0) {
      queryBuilder.append('&');
    }
    queryBuilder.append(name);
  }
 else {
    for (    Object value : values) {
      if (queryBuilder.length() != 0) {
        queryBuilder.append('&');
      }
      queryBuilder.append(name);
      if (value != null) {
        queryBuilder.append('=');
        queryBuilder.append(value.toString());
      }
    }
  }
  return this;
}
