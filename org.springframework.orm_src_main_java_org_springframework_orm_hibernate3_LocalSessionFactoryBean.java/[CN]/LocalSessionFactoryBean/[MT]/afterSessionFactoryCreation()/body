{
  if (this.schemaUpdate) {
    DataSource dataSource=getDataSource();
    if (dataSource != null) {
      configTimeDataSourceHolder.set(dataSource);
    }
    try {
      updateDatabaseSchema();
    }
  finally {
      if (dataSource != null) {
        configTimeDataSourceHolder.set(null);
      }
    }
  }
}
