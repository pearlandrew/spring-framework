{
  String text="foo=${foo}";
  assertEquals("foo=bar",this.helper.replacePlaceholders(text,new PropertyPlaceholderHelper.PlaceholderResolver(){
    public String resolvePlaceholder(    String placeholderName){
      if ("foo".equals(placeholderName)) {
        return "bar";
      }
 else {
        return null;
      }
    }
  }
));
}
